<%= form_for(resource, :as => resource_name, :html => {:class => "well form-inline"}, :url => session_path(resource_name)) do |f| %>
  	<%= f.email_field :email, :class => "input-small", :placeholder => "Email" %>
  	<%= f.password_field :password, :class => "input-small", :placeholder => "Password" %>
  <% if devise_mapping.rememberable? -%>
			<label for="user_remember_me" class="checkbox">
				<%= f.check_box :remember_me %> Remember Me
			</label>
  <% end -%>
  <%= f.submit "Sign in", :class => "btn" %>
<% end %>

<%= render :partial => "devise/shared/links" %>